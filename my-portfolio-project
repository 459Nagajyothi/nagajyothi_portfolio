<!-- Lightbox Overlay -->
<div class="lightbox-overlay" id="lightbox-overlay">
    <div class="lightbox-content">
        <img src="" alt="Enlarged Certificate" id="lightbox-image">
        <a href="" download class="download-btn" id="download-btn">Download Certificate</a>
    </div>
